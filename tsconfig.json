{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types/**/*.d.ts", "src/**/*.d.ts"]
  },
  "files": [
    "node_modules/@types/jest/index.d.ts",
    "node_modules/@rolster/types/index.d.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.spec.ts"]
}
